<LinearLayout
    android:id="@+id/layout_you"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_you"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:layout_gravity="center"
        android:src="@drawable/ic_person_black_24dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:layout_marginStart="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상대방ID (업체명)"
            android:layout_marginStart="3dp"/>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/bubble_you_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/theme_chatroom_bubble_you_01_image"
            android:text="어서오세요,\n우리업체 가나다라 입니다.\n궁금한 내용이 있으면\n메세지를 남겨주세요^^"
            android:paddingLeft="12dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/time_you"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="hh시mm분"
            android:layout_gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/layout_me"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp">

